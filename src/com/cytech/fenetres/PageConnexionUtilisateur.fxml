<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="549.0" prefWidth="527.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cytech.fenetres.PageConnexionUtilisateurController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" top="20.0" />
               </padding>
               <children>
                  <Label scaleX="2.5" scaleY="2.5" text="CONNEXION" />
               </children>
            </VBox>
         </top>
         <center>
            <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
               <children>
                   
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="code privé :" HBox.hgrow="NEVER" />
                        <TextField id="emailField" fx:id="codePrive" maxWidth="200.0" prefWidth="172.0" promptText="Code Privé">
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin></TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="Mot de Passe : " HBox.hgrow="NEVER" />
                        <TextField id="passwordField" fx:id="motDePasseUtilisateur" maxWidth="200.0" prefWidth="172.0" promptText="Mot de Passe" />
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#ConnexionBoutonUtilisateur" text="Se Connecter">
                     <VBox.margin>
                        <Insets left="170.0" />
                     </VBox.margin></Button>
                  <Label text="Pas encore inscrit ? Inscrivez vous ici :" />
                  <Button mnemonicParsing="false" onAction="#boutonInscription" text="S'inscrire">
                     <VBox.margin>
                        <Insets left="200.0" />
                     </VBox.margin></Button>
                  <Button fx:id="boutonRetour" mnemonicParsing="false" onAction="#retourBoutonPageConnexionUtilisateur" text="Retour">
                     <VBox.margin>
                        <Insets left="220.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </center>
         <bottom>
            <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="20.0" top="10.0" />
               </padding>
            </VBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
