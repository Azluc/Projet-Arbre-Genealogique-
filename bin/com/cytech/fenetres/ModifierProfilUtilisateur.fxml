<AnchorPane prefHeight="549.0" prefWidth="527.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cytech.fenetres.ModifierProfilUtilisateurController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" top="20.0" />
               </padding>
               <children>
                  <Label scaleX="2.5" scaleY="2.5" text="Modifier Votre profil" />
               </children>
            </VBox>
         </top>
         <center>
            <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
               <children>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="Votre email :" />
                        <TextField fx:id="champEmail" prefHeight="24.0" prefWidth="178.0" promptText="email">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="30.0" layoutY="166.0" spacing="10.0">
                     <children>
                        <Label text="Votre nationalité :" />
                        <TextField fx:id="champNationalite" prefHeight="24.0" prefWidth="178.0" promptText="Nationalité">
                           <HBox.margin>
                              <Insets right="19.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="30.0" layoutY="127.0" spacing="10.0">
                     <children>
                        <Label text="Votre adresse :" />
                        <TextField fx:id="champAdresse" prefHeight="24.0" prefWidth="178.0" promptText="adresse" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="30.0" layoutY="107.0" spacing="10.0">
                     <children>
                        <Label text="Votre numéro de téléphone :">
                           <HBox.margin>
                              <Insets left="-90.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="champTelephone" prefHeight="24.0" prefWidth="178.0" promptText="Numéro téléphone" />
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#boutonValider" text="Valider">
                     <VBox.margin>
                        <Insets left="200.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="boutonRetour" mnemonicParsing="false" onAction="#retourPagePrincipale" text="Retour">
                     <VBox.margin>
                        <Insets left="215.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </center>
         <bottom>
            <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="20.0" top="10.0" />
               </padding>
            </VBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
